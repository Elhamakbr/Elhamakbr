vary = statistics.variance(y)
print(vary)
varz = statistics.variance(z)
print(varz)

#Histogram plot


#Normal dustribution plot 
stdx=np.std(x)
meanx=np.mean(x)
domain=np.linspace(0,70)
plt.plot(domain,norm.pdf(domain,meanx,stdx), label="Normal inlet", color="brown")
plt.hist(x, bins = 30, label="Inlet bacteria", alpha=0.9, rwidth=0.85)

stdy=np.std(y)
meany=np.mean(y)
domain=np.linspace(0,70)
plt.plot(domain,norm.pdf(domain,meany,stdy), label="Normal big outlet", color="black")
plt.hist(y, bins = 30, label="Outlet big bacteria", alpha=0.9, rwidth=0.85)


stdz=np.std(z)
meanz=np.mean(z)
domain=np.linspace(0,70)
plt.plot(domain,norm.pdf(domain,meanz,stdz), label="Normal small outlet", color="orange")
plt.hist(z, bins = 30, label="Outlet small bacteria", alpha=0.9, rwidth=0.85, color="y")

plt.xlabel('Size (Âµm)')
plt.ylabel('Frequency')
plt.title('Size distribution of inlet and outlets bacteria')
plt.legend()

plt.show()
