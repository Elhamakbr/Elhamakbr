#statistical values
meanx = statistics.mean(x)
print(meanx)
meany = statistics.mean(y)
print(meany)
meanz = statistics.mean(z)
print(meanz)

medianx = statistics.median(x)
print(medianx)
mediany = statistics.median(y)
print(mediany)
medianz = statistics.median(z)
print(medianz)

modez = statistics.mode(z)
print(modez)
modex = statistics.mode(x)
print(modex)
modey = statistics.mode(y)
print(modey)

STDx = statistics.stdev(x)
print(STDx)
STDy = statistics.stdev(y)
print(STDy)
STDz = statistics.stdev(z)
print(STDz)

